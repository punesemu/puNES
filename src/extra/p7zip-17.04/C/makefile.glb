7zCrcOpt_asm.o : ../../../../Asm/x86/7zCrcOpt_asm.asm
	$(ASM) -I ../../../../Asm/x86/  ../../../../Asm/x86/7zCrcOpt_asm.asm -o 7zCrcOpt_asm.o
AesOpt.o : ../../../../Asm/x86/AesOpt.asm
	$(ASM) -I ../../../../Asm/x86/  ../../../../Asm/x86/AesOpt.asm -o AesOpt.o
